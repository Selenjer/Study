Program slovosochetanie;
uses crt;
var s,a,b:string;
    i,l,k:integer;
begin
    clrscr;
    write('Введите строку:');
    readln(s);
    while s[1]=' ' do
    delete(s,1,1);
    k:=length(s);
    i:=1;
    while not(s[i]=' ') do
     begin
         a[i]:=s[i];
         i:=i+1;
         t:=1;
     end;
    while s[i]=' ' do
    delete(s,i,1);
    while not((s[i]=' ')or(i>k)) do
     begin
         b[t]:=s[i];
         i:=i+1;
         t:=t+1;
     end;
    writeln(length(a));
    writeln(length(b));
    readkey;
end.